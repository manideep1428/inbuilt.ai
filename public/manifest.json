{
    "manifest_version": 3,
    "name": "Text Selector Extension",
    "version": "1.0",
    "description": "Shows an icon when text is selected.",
    "background": {
      "service_worker": "background.js"
    },
    "permissions": ["activeTab", "scripting", "contextMenus"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  